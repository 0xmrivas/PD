@page {
    size: A4;
    margin: 2.54cm;
    font-family: 'Source Sans Pro', sans-serif;
    background: none;
}

@page :first {
    margin: 0;
}

.wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: stretch;
    padding: 0 2cm;
    background-image: url('{{ cover_logo | to_url }}');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    color: white;
    width: 17cm; /* Anchura de A4 menos márgenes */
    height: 25cm; /* Altura de A4 menos márgenes */
}

.upper {
    flex: 0 0 2.5cm; /* 10% de 25cm */
    max-height: 2.5cm;
    min-height: 2.5cm;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    
    p {
        font-size: 11pt;
        text-align: right;
        padding-right: 1cm;
        margin: 0;
    }
}

.title {
    flex: 0 0 17.5cm; /* 70% de 25cm */
    max-height: 17.5cm;
    min-height: 17.5cm;
    display: flex;
    flex-direction: column;
    justify-content: center;

    h1, h2 {
        border-bottom: none !important;
        text-align: left !important;
        padding-left: 1cm;
        margin: 0;
    }

    h1 {
        padding-top: 1cm;
        font-size: 36pt;
        margin-bottom: 0.4cm;
    }

    h2 {
        font-size: 18pt;
    }
}

.properties {
    flex: 0 0 5cm; /* 20% de 25cm */
    max-height: 5cm;
    min-height: 5cm;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;

    p {
        padding-left: 1cm;
        font-size: 11pt;
        margin-top: 0.4cm;
    }
}

body {
    font-family: 'Source Sans Pro', sans-serif;
}

p {
    text-align: justify;
}

table {
    border-collapse: collapse !important;
    width: 100% !important;

    tr:nth-child(even) {
        background-color: #FFE5EA;
    }

    th {
        background-color: #E93456 !important;
        color: white !important;
        font-weight: bold !important;
        padding: 10px !important;
        text-transform: uppercase;
    }

    th, td {
        vertical-align: middle !important;
        text-align: left !important;
        padding: 10px !important;
    }
}
